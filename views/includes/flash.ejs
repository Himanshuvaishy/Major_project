<% if (success && success.length) { %>
    <div class="bg-green-300 text-green-900 px-6 py-4 rounded-lg shadow-md max-w-sm mx-auto my-4 relative" role="alert">
        <span class="block sm:inline font-semibold"><%= success %></span>
        <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3 text-green-900" onclick="this.parentElement.style.display='none';">
            <svg class="fill-current h-6 w-6" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path d="M14.348 5.652a.5.5 0 0 0-.707 0L10 9.293 6.354 5.647a.5.5 0 1 0-.708.708L9.293 10l-3.647 3.646a.5.5 0 1 0 .708.708L10 10.707l3.646 3.647a.5.5 0 0 0 .708-.707L10.707 10l3.647-3.646a.5.5 0 0 0-.006-.702z"/>
            </svg>
        </button>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="bg-red-300 text-red-900 px-6 py-4 rounded-lg shadow-md max-w-sm mx-auto my-4 relative" role="alert">
        <span class="block sm:inline font-semibold"><%= error %></span>
        <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3 text-red-900" onclick="this.parentElement.style.display='none';">
            <svg class="fill-current h-6 w-6" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path d="M14.348 5.652a.5.5 0 0 0-.707 0L10 9.293 6.354 5.647a.5.5 0 1 0-.708.708L9.293 10l-3.647 3.646a.5.5 0 1 0 .708.708L10 10.707l3.646 3.647a.5.5 0 0 0 .708-.707L10.707 10l3.647-3.646a.5.5 0 0 0-.006-.702z"/>
            </svg>
        </button>
    </div>
<% } %>




