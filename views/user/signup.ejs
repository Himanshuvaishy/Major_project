<% layout("/layouts/boilerplate") %>

<body class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md mx-auto">
    <h1 class="text-center text-2xl font-bold mb-6">Sign Up on Wanderlust</h1>
    <form action="/signup" method="POST" class="space-y-4">
      <div class="flex items-center space-x-4">
        <label for="username" class="w-1/3 text-gray-700 font-medium">Username</label>
        <input id="username" name="username" type="text" required
          class="w-2/3 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
      </div>
      <div class="flex items-center space-x-4">
        <label for="email" class="w-1/3 text-gray-700 font-medium">Email</label>
        <input id="email" name="email" type="email" required
          class="w-2/3 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
      </div>
      <div class="flex items-center space-x-4">
        <label for="password" class="w-1/3 text-gray-700 font-medium">Password</label>
        <input id="password" name="password" type="password" required
          class="w-2/3 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
      </div>
      <div class="text-center">
        <button type="submit"
          class="w-full bg-teal-500 text-white p-3 rounded-lg hover:bg-teal-600 transition duration-300">
          Sign Up
        </button>
      </div>
    </form>
  </div>
</body>


