<% layout("/layouts/boilerplate") %>

<body class="bg-gray-200 text-gray-900 flex items-center justify-center min-h-screen p-4">
    <div class="container mx-auto px-4 max-w-md bg-white shadow-lg rounded-lg p-6">
        <div class="flex items-center justify-center mb-4">
            <!-- Danger Symbol Icon -->
            <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M21 12a9 9 0 1 0-18 0 9 9 0 0 0 18 0z"></path>
            </svg>
        </div>
        <h2 class="text-2xl font-bold text-red-600 text-center mb-4">Error</h2>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Oops!</strong>
            <span class="block sm:inline"><%= err.message %></span>
            <p><%= err.statusCode %></p>
        </div>
        <div class="mt-6 text-center">
            <a href="/listings/<%= id %>" class="text-teal-500 hover:underline">Go Back Home</a>
        </div>
    </div>
</body>

