<% layout("/layouts/boilerplate") %>

<body class="bg-gray-200 text-gray-900 flex items-center justify-center min-h-screen p-4">
  <div class="container mx-auto px-4 max-w-lg bg-gray-200 shadow-lg rounded-lg p-6">
    <!-- Header -->
    <h3 class="text-center text-2xl font-bold text-gray-700 mb-6 border-b-2 border-teal-500 pb-2">
      Create a New Listing
    </h3>

    <!-- Form -->
    <form method="post" action="/listings" class="space-y-4" novalidate enctype="multipart/form-data">
      <div>
        <label for="title" class="block text-gray-700 font-medium mb-2">Title</label>
        <input id="title" name="listing[title]" placeholder="Enter title" type="text" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
        <div class="text-red-500 text-sm mt-1 hidden" id="title-error">Title is required.</div>
      </div>

      <div>
        <label for="description" class="block text-gray-700 font-medium mb-2">Description</label>
        <textarea id="description" name="listing[description]" placeholder="Enter description" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300"></textarea>
        <div class="text-red-500 text-sm mt-1 hidden" id="description-error">Description is required.</div>
      </div>

     
      <div>
        <label for="image" class="block text-gray-700 font-medium mb-2">Upload Image Listing </label>
        <input id="image" name="listing[image]" placeholder="Enter image URL/Link" type="file" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
        <div class="text-red-500 text-sm mt-1 hidden" id="image-error">Image URL/Link is optional.</div>
      </div>

      <div class="flex gap-4">
        <div class="flex-1">
          <label for="price" class="block text-gray-700 font-medium mb-2">Price</label>
          <input id="price" name="listing[price]" placeholder="Enter price" type="text" required
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
          <div class="text-red-500 text-sm mt-1 hidden" id="price-error">Price is required.</div>
        </div>

        <div class="flex-1">
          <label for="country" class="block text-gray-700 font-medium mb-2">Country</label>
          <input id="country" name="listing[country]" placeholder="Enter country" type="text" required
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
          <div class="text-red-500 text-sm mt-1 hidden" id="country-error">Country is required.</div>
        </div>
      </div>

      <div>
        <label for="location" class="block text-gray-700 font-medium mb-2">Location</label>
        <input id="location" name="listing[location]" placeholder="Enter location" type="text" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
        <div class="text-red-500 text-sm mt-1 hidden" id="location-error">Location is required.</div>
      </div>

      <button type="submit"
        class="w-full bg-teal-500 text-gray-300 py-3 rounded-lg shadow-md hover:bg-teal-600 transition duration-300">Add Listing</button>
    </form>
  </div>

  <!-- Include the form-validation.js file -->
  <script src="/JS/formScript.js"></script>
</body>
