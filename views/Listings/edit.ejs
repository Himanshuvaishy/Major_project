<% layout("/layouts/boilerplate") %>
<body class="mt-4 bg-gray-400 text-gray-900 flex items-center justify-center min-h-screen p-4">

  <div class="container mx-auto px-4 max-w-lg bg-gray-200 shadow-lg rounded-lg p-6">
    <h3 class="text-2xl font-semibold mb-6 text-gray-900 text-center">Edit your Listing</h3>
    
    <!-- Success and Error Messages -->
    <div id="form-messages" class="mb-4">
      <!-- Success message -->
      <div id="success-message" class="text-green-500 text-sm hidden"></div>
      <!-- Error message -->
      <div id="error-message" class="text-red-500 text-sm hidden"></div>
    </div>

    <form id="edit-form" method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate>
      <div class="mb-4">
        <label for="title" class="block text-gray-700 font-medium mb-2">Title</label>
        <input id="title" name="listing[title]" value="<%= listing.title %>" type="text" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
        <div class="text-red-500 text-sm mt-1 hidden" id="title-error">Title is required.</div>
      </div>

      <div class="mb-4">
        <label for="description" class="block text-gray-700 font-medium mb-2">Description</label>
        <textarea id="description" name="listing[description]" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300"><%= listing.description %></textarea>
        <div class="text-red-500 text-sm mt-1 hidden" id="description-error">Description is required.</div>
      </div>

      <div class="mb-4">
        <label for="image" class="block text-gray-700 font-medium mb-2">Image URL</label>
        <input id="image" name="listing[image]" value="<%= listing.image.url %>" type="text" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
        <div class="text-red-500 text-sm mt-1 hidden" id="image-error">Image URL is required.</div>
      </div>

      <div class="flex space-x-4 mb-4">
        <div class="flex-1">
          <label for="price" class="block text-gray-700 font-medium mb-2">Price</label>
          <input id="price" name="listing[price]" value="<%= listing.price %>" type="text" required min="0"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
          <div class="text-red-500 text-sm mt-1 hidden" id="price-error">Price must be a positive number.</div>
        </div>

        <div class="flex-1">
          <label for="country" class="block text-gray-700 font-medium mb-2">Country</label>
          <input id="country" name="listing[country]" value="<%= listing.country %>" type="number" required
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
          <div class="text-red-500 text-sm mt-1 hidden" id="country-error">Country is required.</div>
        </div>
      </div>

      <div class="mb-6">
        <label for="location" class="block text-gray-700 font-medium mb-2">Location</label>
        <input id="location" name="listing[location]" value="<%= listing.location %>" type="text" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition duration-300">
        <div class="text-red-500 text-sm mt-1 hidden" id="location-error">Location is required.</div>
      </div>

      <button type="submit"
        class="w-full bg-teal-500 text-white py-3 rounded-lg font-semibold hover:bg-teal-600 transition duration-300">Edit</button>
    </form>
  </div>

  <!-- Include the form-validation.js file -->
  <script src="/JS/editScript.js"></script>
</body>



